<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/list_switcher_human"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" >
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/humans"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/background_floating_material_light"
            android:textColor="@color/bright_foreground_material_light"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/human_button"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/zombies"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/background_floating_material_dark"
            android:textColor="@color/bright_foreground_material_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:onClick="switchZombie"
            android:id="@+id/zombie_button"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
     </LinearLayout>

    <LinearLayout
        android:id="@+id/human_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp" >

     </LinearLayout>

</LinearLayout>