<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Send complaint report"
        android:textColor="#000000"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>

    <View
        android:id="@+id/listseperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Issue description:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <EditText
        android:id="@+id/complaint_message"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine|textLongMessage"
        android:hint="Enter description"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/submit"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/background_floating_material_dark"
        android:textColor="@color/bright_foreground_material_dark"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="sendComplaint"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/send_complaint_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

</LinearLayout>